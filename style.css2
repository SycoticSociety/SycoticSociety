* {
    box-sizing: border-box;
    margin: 0px;
    padding: 0px;
    z-index: 110;
  }
  body {
    font-family: Arial, sans-serif;
  }
  nav {
    background: rgb(0, 0, 0);
    color: rgb(105,105,105);
    display: flex;
    align-items: center;
    justify-content: space-between;
    z-index: 110;
  }
  nav .mainMenu {
    display: flex;
    list-style: none;
    z-index: 110;
  }
  nav .mainMenu li a {
    display: inline-block;
    padding: 15px;
    text-decoration: none;
    text-transform: uppercase;
    color: rgb(255, 255, 255);
    font-size: 18px;
    transition: 0.2s ease;
    z-index: 110;
  }
  nav .mainMenu li a:hover {
    background: rgb(255, 94, 0);
    z-index: 110;
  }
  nav .openMenu {
    font-size: 2rem;
    margin: 20px;
    display: none;
    cursor: pointer;
    z-index: 110;
  }
  nav .mainMenu .closeMenu,
  .icons i {
    font-size: 2rem;
    display: none;
    cursor: pointer;
    z-index: 110;
  }
  .fa-facebook:hover {
    color: rgb(0, 110, 255);
  }
  .fa-twitter:hover {
    color: rgb(86, 154, 243);
  }
  .fa-instagram:hover {
    color: rgb(255, 0, 191);
  }
  .fa-github:hover {
    color: rgb(255, 123, 0);
  }
  nav .logo {
    margin: 6px;
    cursor: pointer;
    text-transform: uppercase;
    z-index: 110;
  }
  @media (max-width: 800px) {
    nav .mainMenu {
      height: 100vh;
      position: fixed;
      top: 0px;
      right: 0px;
      left: 0px;
      z-index: 120;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background: rgb(0, 0, 0);
      transition: top 1s ease 0s;
      display: none;
    }
    nav .mainMenu .closeMenu {
      display: block;
      position: absolute;
      top: 20px;
      right: 20px;
      z-index: 110;
    }
    nav .openMenu {
      display: block;
      z-index: 110;
    }
    nav .mainMenu li a:hover {
      background: none;
      color: rgb(255, 123, 0);
      z-index: 110;
    }
    .icons i {
      display: inline-block;
      padding: 12px;
      z-index: 110;
    }
  }
